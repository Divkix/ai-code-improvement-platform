#####################################
#  BACKEND  (.env in /backend)      #
#####################################

# ---- Core server ----
PORT=8080
HOST=0.0.0.0
GIN_MODE=debug                 # debug | release | test

# ---- JWT auth ----
JWT_SECRET=replace-with-long-random-string

# ---- Database ----
MONGODB_URI=mongodb://localhost:27017/github-analyzer
DB_NAME=github-analyzer
QDRANT_URL=http://localhost:6334
QDRANT_COLLECTION_NAME=code_chunks
VECTOR_DIMENSION=1024          # 256 | 512 | 1024 | 2048

# ---- GitHub OAuth ----
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_ENCRYPTION_KEY=         # 16/24/32-byte AES key

# ---- Embeddings & Chat ----
EMBEDDING_PROVIDER=voyage      # voyage | local

# Voyage AI (if provider==voyage)
VOYAGE_API_KEY=

# Local embedding server (if provider==local)
LOCAL_EMBEDDING_URL=http://localhost:1234
LOCAL_EMBEDDING_MODEL=text-embedding-nomic-embed-text-v1.5

# LLM (OpenAI-compatible) for chat
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=
LLM_REQUEST_TIMEOUT=30s

########################################################
#  FRONTEND  (.env in /frontend   â€” Vite/SvelteKit)     #
########################################################

# Base URL of the backend (no trailing slash)
VITE_API_URL=http://localhost:8080

